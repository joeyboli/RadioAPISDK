{
  "name": "elliephp/httpclient",
  "description": "A simple laravel inspired abstraction on top of Symfony HttpClient.",
  "type": "library",
  "keywords": [
    "httpclient",
    "elliephp"
  ],
  "homepage": "https://github.com/elliephp/httpclient",
  "license": "MIT",
  "authors": [
    {
      "name": "Joey Boli",
      "email": "bankuboy@proton.me"
    }
  ],
  "support": {
    "issues": "https://github.com/elliephp/httpclient/issues",
    "source": "https://github.com/elliephp/httpclient"
  },
  "require": {
    "php": "^8.4",
    "symfony/http-client": "*"
  },
  "require-dev": {
    "giorgiosironi/eris": "^0.14",
    "phpunit/phpunit": "^11.0",
    "symfony/var-dumper": "^7.3"
  },
  "autoload": {
    "psr-4": {
      "ElliePHP\\Components\\HttpClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ElliePHP\\Components\\HttpClient\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
